{
  "name": "clawdbot-vscode",
  "displayName": "Clawdbot",
  "description": "Clawdbot VS Code extension (side panel, debug console, gateway relay)",
  "version": "0.1.2",
  "publisher": "elladclawdbot",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:clawdbot.panel",
    "onCommand:clawdbot.sendPrompt"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clawdbot",
          "title": "Clawdbot",
          "icon": "media/clawdbot.svg"
        }
      ]
    },
    "views": {
      "clawdbot": [
        {
          "id": "clawdbot.panel",
          "name": "Assistant",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "clawdbot.sendPrompt",
        "title": "Clawdbot: Send Prompt"
      },
      {
        "command": "clawdbot.sendSelection",
        "title": "Clawdbot: Send Selection"
      },
      {
        "command": "clawdbot.flutterRun",
        "title": "Clawdbot: Flutter Run"
      },
      {
        "command": "clawdbot.flutterHotReload",
        "title": "Clawdbot: Flutter Hot Reload"
      },
      {
        "command": "clawdbot.flutterHotRestart",
        "title": "Clawdbot: Flutter Hot Restart"
      },
      {
        "command": "clawdbot.addFileToContext",
        "title": "Clawdbot: Add File to Context"
      },
      {
        "command": "clawdbot.clearContextFiles",
        "title": "Clawdbot: Clear Context Files"
      },
      {
        "command": "clawdbot.showFlutterLogs",
        "title": "Clawdbot: Show Flutter Logs"
      },
      {
        "command": "clawdbot.syncGatewayToWorkspace",
        "title": "Clawdbot: Sync MD from Gateway"
      },
      {
        "command": "clawdbot.syncWorkspaceToGateway",
        "title": "Clawdbot: Sync MD to Gateway"
      }
    ],
    "configuration": {
      "title": "Clawdbot",
      "properties": {
        "clawdbot.gatewayUrl": {
          "type": "string",
          "default": "http://127.0.0.1:19000",
          "description": "Clawdbot gateway URL"
        },
        "clawdbot.gatewayToken": {
          "type": "string",
          "default": "",
          "description": "Clawdbot gateway token"
        },
        "clawdbot.includeDebugConsole": {
          "type": "boolean",
          "default": true,
          "description": "Include debug console output in context"
        },
        "clawdbot.flutterRunCommand": {
          "type": "string",
          "default": "flutter run",
          "description": "Command to run Flutter (e.g. flutter run -d chrome)"
        },
        "clawdbot.includeWorkspaceContext": {
          "type": "boolean",
          "default": true,
          "description": "Include workspace context (workspace folders, active file, selection)"
        },
        "clawdbot.maxWorkspaceFiles": {
          "type": "number",
          "default": 200,
          "description": "Max number of workspace file paths to include in context"
        },
        "clawdbot.maxFileChars": {
          "type": "number",
          "default": 20000,
          "description": "Max characters per file to include in context"
        },
        "clawdbot.maxLogLines": {
          "type": "number",
          "default": 200,
          "description": "Max log lines to include from Flutter run"
        },
        "clawdbot.autoHotReloadOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Auto hot-reload after saving a file (requires Flutter run)"
        },
        "clawdbot.includeMarkdownFiles": {
          "type": "boolean",
          "default": true,
          "description": "Include markdown files (*.md) from workspace in context"
        },
        "clawdbot.maxMarkdownFiles": {
          "type": "number",
          "default": 20,
          "description": "Max number of markdown files to include"
        },
        "clawdbot.gatewayHost": {
          "type": "string",
          "default": "100.78.150.39",
          "description": "Gateway SSH host"
        },
        "clawdbot.gatewayUser": {
          "type": "string",
          "default": "ubuntu",
          "description": "Gateway SSH user"
        },
        "clawdbot.gatewayKeyPath": {
          "type": "string",
          "default": "~/.ssh/id_ed25519",
          "description": "SSH private key path"
        },
        "clawdbot.gatewaySourcePath": {
          "type": "string",
          "default": "/home/ubuntu/clawd",
          "description": "Gateway source path"
        },
        "clawdbot.workspaceMdFolder": {
          "type": "string",
          "default": ".clawdbot",
          "description": "Workspace folder to store synced MD files"
        },
        "clawdbot.mdFilesToSync": {
          "type": "array",
          "default": [
            "SOUL.md",
            "USER.md",
            "MEMORY.md",
            "TOOLS.md",
            "AGENTS.md"
          ],
          "description": "MD files to sync"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.12.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.4.5"
  }
}